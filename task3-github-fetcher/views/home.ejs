<!DOCTYPE html>
<html>
  <head>
    <title>Github Profile Fetcher</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #f4f6f9;
        margin: 0;
        padding: 0;
      }
      h1 {
        text-align: center;
        margin-top: 30px;
        color: #333;
      }
      form {
        display: flex;
        justify-content: center;
        margin: 20px 0;
      }
      input[type="text"] {
        padding: 10px;
        width: 250px;
        border: 1px solid #ccc;
        border-radius: 4px;
        outline: none;
      }
      button {
        padding: 10px 15px;
        margin-left: 8px;
        border: none;
        background: #0073e6;
        color: white;
        border-radius: 4px;
        cursor: pointer;
      }
      button:hover {
        background: #005bb5;
      }
      p {
        text-align: center;
      }
      .card {
        max-width: 400px;
        margin: 20px auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
      }
      .card img {
        border-radius: 50%;
        margin-bottom: 15px;
      }
      .error {
        color: red;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Github Profile Fetcher</h1>

    <form method="POST" action="/">
      <input type="text" name="username" placeholder="Enter username" required />
      <button type="submit">Search</button>
    </form>

    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <% if (user) { %>
      <div class="card">
        <img src="<%= user.avatar_url %>" width="120" height="120" />
        <h2><%= user.name || "No name" %></h2>
        <p>@<%= user.login %></p>
        <p><%= user.bio || "No bio available" %></p>
        <p><strong>Repos:</strong> <%= user.public_repos %></p>
        <a href="<%= user.html_url %>" target="_blank">View Profile</a>
      </div>
    <% } %>
  </body>
</html>
